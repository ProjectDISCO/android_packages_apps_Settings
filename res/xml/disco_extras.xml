<?xml version="1.0" encoding="utf-8"?>
 
 <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
     android:title="@string/header_category_disco"
     settings:keywords="@string/keywords_disco" >
 
<PreferenceCategory
        android:key="disco_statusbar_category"
        android:title="@string/disco_preferencecategory_statusbar" >

    <PreferenceScreen
            android:fragment="com.android.settings.disco.StatusBarClockStyle"
            android:key="clock_style_pref"
            android:title="@string/status_bar_clock" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="status_bar_native_battery_percentage"
            android:title="@string/status_bar_native_battery_percentage_title"
            android:summary="@string/status_bar_native_battery_percentage_summary" />

</PreferenceCategory>

<PreferenceCategory
        android:key="disco_navbar_category"
        android:title="@string/disco_preferencecategory_navbar" >

    <ListPreference
        android:key="navigation_bar_height"
        android:dialogTitle="@string/disco_navbar_height"
        android:title="@string/disco_navbar_height"
        android:entries="@array/navigation_bar_height_entries"
        android:entryValues="@array/navigation_bar_height_values"
        android:defaultValue="48"
        android:persistent="false" />

</PreferenceCategory>

<PreferenceCategory
        android:key="disco_recents_category"
        android:title="@string/disco_preferencecategory_recents" >

         <com.android.settings.disco.SystemSettingSwitchPreference
		android:key="recents_show_hide_search_bar"
		android:title="@string/recents_show_searchbar"
		android:summary="@string/recents_show_searchbar_summary"
		settings:keywords="@string/keywords_recents_show_searchbar"
                android:defaultValue="false" />

</PreferenceCategory>

<PreferenceCategory
        android:key="disco_volumerocker_category"
        android:title="@string/disco_preferencecategory_volumerocker" >

    <ListPreference
        android:dialogTitle="@string/volume_key_cursor_control_title"
        android:entries="@array/volume_key_cursor_control_entries"
        android:entryValues="@array/volume_key_cursor_control_values"
        android:key="volume_key_cursor_control"
        android:persistent="false"
        android:title="@string/volume_key_cursor_control_title" />

</PreferenceCategory>

</PreferenceScreen>

